<%= simple_form_for(@copier) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :serial %>
    <%= f.input :location %>
	<%= f.collection_select(:model_id, Model.all, :id, :name, :prompt => "Select a prospect") %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
